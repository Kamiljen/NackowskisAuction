@using NackowskisAuctionHouse.DAL.Models;
@{
    ViewData["Title"] = "Home Page";
}
@model List<Auction>;

<div id="mainCarousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mainCarousel" data-slide-to="1"></li>
        <li data-target="#mainCarousel" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/Watches1.jpg" alt="Kategori: Klockor">
            <div class="carousel-caption d-none d-md-block">
                <h5>Kategori: Klockor</h5>
                <p>...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Diamonds1.jpg" alt="Kategori: Ädelstenar">
            <div class="carousel-caption d-none d-md-block">
                <h5>Kategori: Ädelstenar</h5>
                <p>...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Mobler1.jpg" alt="Möbler">
            <div class="carousel-caption d-none d-md-block">
                <h5>Kategori: Möbler</h5>
                <p>...</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#mainCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#mainCarousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>

