@using NackowskisAuctionHouse.ChartViewModels;
@model DashboardVM
@{
    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataSets.Select(x => x.DimensionOne).ToList());
    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataSets.Select(x => x.Quantity).ToList());
}


<input type="hidden" id="y-values" name="name" value="@YValues" />
<input type="hidden" id="x-labels" name="name" value="@XLabels" />
    <canvas id="chart" style="width:100%; height:500px"></canvas>



