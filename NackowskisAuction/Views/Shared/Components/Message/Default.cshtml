    <div class="collapse" id="messageCollapse">
        <div class="card card-body">
            <table>
                <tbody>
                    @foreach (var message in @Model)
                    {
                        if (!message.MessageRead)
                        {
                            <tr>
                                <td>@message.Title @message.TimeStamp</td>
                                <td></td>
                            </tr>
                        }

                    }


                </tbody>
            </table>
            
        </div>
    </div>
