@using NackowskisAuctionHouse.ViewModels;

@model List<MessageVM>

    <a  class="btn" id="messageButton" data-toggle="collapse" href="#messageCollapse" role="button" aria-controls="messageCollapse" aria-expanded="false">
        <i class="far fa-envelope"></i>
    </a>
