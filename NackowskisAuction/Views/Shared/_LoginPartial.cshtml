@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@using NackowskisAuctionHouse.DAL.IdentityModels;
@using NackowskisAuctionHouse.ViewModels;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">

        <a asp-area="Identity" class="nav-link" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-user-circle"></i>  @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form asp-controller="Account" asp-action="SignOut" id="logoutForm" class="navbar-right text-muted">
            <button type="submit" class="btn btn-link navbar-btn navbar-link text-muted">Logga ut</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
        <a data-toggle="modal" data-target="#registerModal" class="nav-link" href="#registerModal">Skapa konto</a>
     
    </li>
    <li class="nav-item">
        <a data-toggle="modal" data-target="#signinModal" class="nav-link" href="#signinModal">Logga in</a>
       
    </li>
    @await Component.InvokeAsync("SignIn");
    @await Component.InvokeAsync("Register");
   
}

